<?xml version="1.0" encoding="UTF-8"?>
<WidgetConfig version="1">

	<!-- 深色模式 -->
	<ImageSelect name="surfaceConfig" displayTitle="外观" width="300" height="150">
		<item>config/surface_2.png</item>
		<item>config/surface_0.png</item>
		<item>config/surface_1.png</item>
	</ImageSelect>

	<!-- 配色央视 -->
	<ColorGroup name="colorStyle" displayTitle="配色样式" uiType="0">
		<Var name="themeColor" values="#4374fc,#0fac64,#fbbc05,#ea4335,#6a43fc" />
	</ColorGroup>
	
	<!-- TODO 为什么要从 1 开始？在实际使用时还是会减去 1 从 0 开始 -->
	<!-- 圆角 -->
	<FontSize name="radiusConfig" default="47" from="1" to="73" displayTitle="圆角大小" />
	<!-- 背景透明度 -->
	<FontSize name="alphaConfig" default="256" from="1" to="256" displayTitle="背景透明度" />

	<!-- 动画开关 -->
	<OnOff name="aniSwitch" default="1" displayTitle="开启动画" />
	
	<!-- 是否显示边框 -->
	<OnOff name="borderConfig" default="0" displayTitle="显示边框" />
</WidgetConfig>